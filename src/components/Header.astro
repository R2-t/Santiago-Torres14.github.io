---
import { Icon } from 'astro-icon';

interface Props {
  menuTabs: string[];
}
const { menuTabs } = Astro.props;
---

<header>
  <div>
    <div class="container">
      <h1>Santiago.</h1>
      <button id="menu">
        <Icon name="mdi:menu" />
      </button>
    </div>
    <div class="menu">
      <ul>
        {
          menuTabs.map((item) => (
            <li><a>{item}</a></li>
          ))
        }
      </ul>
    </div>
  </div>
</header>

<style>
  [astro-icon] {
    color: var(--strong);
    width: 2rem;
    height: 2rem;
    transition: 0.5s ease-in-out;
  }

  [astro-icon]:hover {
    transform: rotate(-360deg);
  }

  .container {
    display: flex;
    justify-content: space-between;
    padding: 0 1.2rem;
    align-items: center;
  }

  .menu {
      display: flex;
      justify-content: flex-end;
      padding: 1rem;
      text-align: end;
  }

  a {
      font-size: 16px;
      font-weight: 550;
      font-style: italic;
  }

  
</style>

<script>
  const button = document.getElementById('menu');
  let is_clicked = false;
  button?.addEventListener('click', () => {
    is_clicked = !is_clicked;
    if (is_clicked) {
    } else {
    }
  });
</script>
